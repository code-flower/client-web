{
  "manifest_version": 2,
  "name": "Git-viz",
  "version": "0.1",
  "description": "Visualize repos",
  "icons": { 
    "48": "images/favicon.ico",
    "128": "images/favicon.ico" 
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "permissions": ["storage"],
  "browser_action": {
    "default_title": "Git Viz",
    "default_icon": "images/icon48.png"
  }
}